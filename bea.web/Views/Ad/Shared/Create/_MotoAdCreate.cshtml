@model Bea.Models.Create.Vehicules.AdMotoCreateModel
@Html.HiddenFor(model => model.Type)
<div class="row">
    <div class="span3">
        <label class="control-label" for="inputKm">@Html.LabelFor(model => model.EngineSize)</label>
        <div class="controls">
            @Html.TextBoxFor(model => model.EngineSize, new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.EngineSize, String.Empty, new { @class = "label label-important" })
        </div>
    </div>
    <div class="span1">
    </div>
    <div class="span3">
        <label class="control-label" for="inputYear">@Html.LabelFor(model => model.SelectedYearId)</label>
        <div class="controls">
            @Html.DropDownListFor(model => model.SelectedYearId, (IEnumerable<SelectListItem>)ViewBag.Years, "Choisissez une année", new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.SelectedYearId, String.Empty, new { @class = "label label-important" })
        </div>
    </div>
</div>
<div class="row">
    <div class="span3">
        <label class="control-label" for="inputKm">@Html.LabelFor(model => model.Km)</label>
        <div class="controls controls">
            @Html.TextBoxFor(model => model.Km, new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.Km, String.Empty, new { @class = "label label-important" })
        </div>
    </div>
    <div class="span1">
    </div>
    <div class="span3">
        <label class="control-label" for="inputBrand">@Html.LabelFor(model => model.SelectedBrandId)</label>
            <div class="controls">
                @Html.DropDownListFor(model => model.SelectedBrandId, (IEnumerable<SelectListItem>)ViewBag.Brands, "Choisissez une marque", new { @class = "input-large" })
                @Html.ValidationMessageFor(model => model.SelectedBrandId, String.Empty, new { @class = "label label-important" })
            </div>
    </div>
</div>
