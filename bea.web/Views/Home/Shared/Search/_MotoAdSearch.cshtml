        @Html.DropDownListFor(Model => Model.MinKmSelectedId, (IEnumerable<SelectListItem>)ViewBag.Kms, "Km Min", new { @class = "input-medium" })
        @Html.DropDownListFor(Model => Model.MaxKmSelectedId, (IEnumerable<SelectListItem>)ViewBag.Kms, "Km Max", new { @class = "input-medium" })
        @Html.DropDownListFor(Model => Model.MinEngineSizeSelectedId, (IEnumerable<SelectListItem>)ViewBag.Engines, "Cylindree Min", new { @class = "input-medium" })
        @Html.DropDownListFor(Model => Model.MaxEngineSizeSelectedId, (IEnumerable<SelectListItem>)ViewBag.Engines, "Cylindree Max", new { @class = "input-medium" })
</div>
