@model Bea.Models.Search.Vehicles.MotoAdSearchModel

<h6><i class="  icon-pencil"></i>&nbsp; Filtrer les annonces</h6>
<div class="controls controls-row">
        @Html.DropDownListFor(model => model.BrandSelectedId, (IEnumerable<SelectListItem>)ViewBag.Brands, "Marque", new { @class = "input-large" })
        @Html.DropDownListFor(Model => Model.MinYearSelectedId, (IEnumerable<SelectListItem>)ViewBag.Years, "Annee Min", new { @class = "input-medium" })
