@model Bea.Models.Search.AdvancedAdSearchModel

<h6><i class="  icon-pencil"></i>&nbsp; Filtrer les annonces</h6>
<div class="controls controls-row">
    @Html.DropDownListFor(Model => Model.SelectedMotorTypeId, (IEnumerable<SelectListItem>)ViewBag.Types, "Type", new { @class = "input-medium" })
    @Html.DropDownListFor(Model => Model.AgeBracketSelectedId, (IEnumerable<SelectListItem>)ViewBag.AgeBrackets, "Age", new { @class = "input-medium" })
    @Html.TextBoxFor(Model => Model.MinHp, "Min CV", new { @class = "input-small", @placeholder = "CV min..." })
    @Html.TextBoxFor(Model => Model.MaxHp, "Max CV", new { @class = "input-small", @placeholder = "CV max..." })
</div>
