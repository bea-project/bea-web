@model Bea.Models.Create.AdvancedAdCreateModel
@Html.HiddenFor(model => model.Type)
<div class="row-fluid">
    <div class="span6">
        <dt>Marque:</dt>
        <dd>
            @Html.DropDownListFor(model => model.SelectedCarBrandId, (IEnumerable<SelectListItem>)ViewBag.Brands, "Choisissez une marque", new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.SelectedCarBrandId, String.Empty, new { @class = "label label-important" })
        </dd>
        <dt>Carburant:</dt>
        <dd>
            @Html.DropDownListFor(model => model.SelectedFuelId, (IEnumerable<SelectListItem>)ViewBag.Fuels, "Choisissez un type", new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.SelectedFuelId, String.Empty, new { @class = "label label-important" })
        </dd>
        <dt>Boîte de vitesses:</dt>
        <dd>
            <label class="checkbox inline">@Html.RadioButtonFor(model => model.IsAutomatic, true, new { @checked = "checked", @style = "vertical-align: top" }) Automatique</label>
            <label class="checkbox inline">@Html.RadioButtonFor(model => model.IsAutomatic, false, new { @style = "vertical-align: top" }) Manuelle</label>
        </dd>
        <dd>&nbsp;</dd>
    </div>
    <div class="span6">
        <dt>Année-Modele:</dt>
        <dd>
            @Html.DropDownListFor(model => model.SelectedYearId, (IEnumerable<SelectListItem>)ViewBag.Years, "Choisissez une année", new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.SelectedYearId, String.Empty, new { @class = "label label-important" })
        </dd>
        <dt>Kilométrage:</dt>
        <dd>
        <div class="input-append">
            @Html.TextBoxFor(model => model.Km, new { @class = "input-mini" })
            <span class="add-on">Km</span>
        </div>
        @Html.ValidationMessageFor(model => model.Km, String.Empty, new { @class = "label label-important" })
        </dd>
    </div>
</div>
