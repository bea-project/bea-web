@model Bea.Models.Create.AdvancedAdCreateModel
@Html.HiddenFor(model => model.Type)
<div class="row-fluid">
    <div class="span6">
        <dt>Matériaux:</dt>
        <dd>
            @Html.DropDownListFor(model => model.SelectedSailingBoatTypeId, (IEnumerable<SelectListItem>)ViewBag.Types, "Choisissez un type", new { @class = "input-large" })
                @Html.ValidationMessageFor(model => model.SelectedSailingBoatTypeId, String.Empty, new { @class = "label label-important" })
        </dd>
        <dt>Coque:</dt>
        <dd>
           @Html.DropDownListFor(model => model.SelectedHullTypeId, (IEnumerable<SelectListItem>)ViewBag.HullTypes, "Choisissez une coque", new { @class = "input-large" })
                @Html.ValidationMessageFor(model => model.SelectedHullTypeId, String.Empty, new { @class = "label label-important" })
        </dd>
    </div>
    <div class="span6">
        <dt>Année-Modele:</dt>
        <dd>
            @Html.DropDownListFor(model => model.SelectedYearId, (IEnumerable<SelectListItem>)ViewBag.Years, "Choisissez une année", new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.SelectedYearId, String.Empty, new { @class = "label label-important" })
        </dd>
        <dt>Longueur:</dt>
        <dd>
            <div class="input-append">
            @Html.TextBoxFor(model => model.Length, new { @class = "input-mini" })
                <span class="add-on">M</span>
            </div>
            @Html.ValidationMessageFor(model => model.Length, String.Empty, new { @class = "label label-important" })
        </dd>
    </div>
</div>


